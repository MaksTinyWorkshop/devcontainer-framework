{
  "name": "DEVPROJECT",
  "dockerComposeFile": "compose.dev.yml",
  "service": "DEVPROJECT",
  "workspaceFolder": "/workspace/DEVPROJECT",
  "remoteUser": "node",
  "forwardPorts": [3000, 27017],
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mongodb.mongodb-vscode",
        "cweijan.vscode-database-client2", // pour visualiser rapidement plusieurs connexions (SQL + NoSQL)
        "jeremyrajan.mongo-snippets-for-node-js", // snippets utiles pour MongoDB/Mongoose dans Node.js
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "mikestead.dotenv"
      ]
    }
  },
  "postCreateCommand": "sh -c 'if [ -f /workspace/DEVPROJECT/package.json ]; then cd /workspace/DEVPROJECT && npm ci --no-audit --no-fund > /tmp/devcontainer_setup.log 2>&1; else echo \"ğŸ“‚ Projet vide â€” exÃ©cute npm init manuellement si besoin.\"; fi'"
}
