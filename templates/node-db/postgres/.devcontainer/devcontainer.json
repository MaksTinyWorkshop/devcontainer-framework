{
  "name": "DEVPROJECT",
  "dockerComposeFile": "compose.dev.yml",
  "service": "DEVPROJECT",
  "workspaceFolder": "/workspace/DEVPROJECT",
  "remoteUser": "node",
  "forwardPorts": [3000, 5432],
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-ossdata.vscode-postgresql",
        "mechatroner.rainbow-csv", // lecture/édition de fichiers .csv exportés depuis PostgreSQL
        "mtxr.sqltools", // gestionnaire SQL universel avec autocomplétion et query runner
        "mtxr.sqltools-driver-pg", // driver SQLTools pour PostgreSQL
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "mikestead.dotenv"
      ]
    }
  }
}