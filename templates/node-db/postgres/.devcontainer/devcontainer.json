{
  "name": "DEVPROJECT",
  "dockerComposeFile": "compose.dev.yml",
  "service": "DEVPROJECT",
  "workspaceFolder": "/workspace/DEVPROJECT",
  "remoteUser": "node",
  "forwardPorts": [3000, 5432],
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "rvest.vs-code-prettier-eslint",
        "prisma.prisma",
        "abians.prisma-generate-uml",
        "inferrinizzard.prettier-sql-vscode",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "mechatroner.rainbow-csv",
        "ms-azuretools.vscode-docker",
        "mikestead.dotenv",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },
  "postCreateCommand": "sh -c 'if [ -f /workspace/DEVPROJECT/package.json ]; then cd /workspace/DEVPROJECT && npm ci --no-audit --no-fund > /tmp/devcontainer_setup.log 2>&1; else echo \"ğŸ“‚ Projet vide â€” exÃ©cute npm init manuellement si besoin.\"; fi'"
}
